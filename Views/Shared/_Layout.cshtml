<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Avaliacao-Lucas</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <style>
        body {
            padding-top: 4.5rem;
        }

        footer {
            margin-top: 2rem;
            padding: 1rem 0;
            background-color: #f8f9fa;
            text-align: center;
        }

        .result {
            margin-top: 1rem;
            font-size: 1.5rem;
        }
    </style>
</head>
<body>
    @RenderBody()
    <!-- Main Content -->
    <div class="container mt-5">
        <h2>Calculadora</h2>
        <form method="get">
            <div class="mb-3">
                <label for="num1" class="form-label">Número 1</label>
                <input type="number" id="num1" name="a" class="form-control" required />
            </div>
            <div class="mb-3">
                <label for="num2" class="form-label">Número 2</label>
                <input type="number" id="num2" name="b" class="form-control" required />
            </div>
            <div class="d-flex">
                <button type="submit" class="btn btn-primary me-2" formaction="/Calculadora/RealizarSoma">Soma</button>
                <button type="submit" class="btn btn-secondary me-2" formaction="/Calculadora/RealizarSubtracao">Subtração</button>
                <button type="submit" class="btn btn-success me-2" formaction="/Calculadora/RealizaMultiplicacao">Multiplicação</button>
                <button type="submit" class="btn btn-danger" formaction="/Calculadora/RealizaDivisao">Divisão</button>
            </div>
        </form>

        <div class="result">
            @if (ViewData["Result"] != null)
            {
                <p>Resultado: @ViewData["Result"]</p>
            }
        </div>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
